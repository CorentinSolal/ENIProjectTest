{% extends 'base.html.twig' %}

{% block title %}Campus index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Les Campus</h1>
        {{ include('campus/_form.html.twig', {'button_label': 'Rechercher'}) }}

        <div class="glass-panel uk-grid-divider" uk-grid>
            <div class="divTable">
                <div class="divTableBody">
                    <div class="divTableRow">
                        <div class="divTableCell"><h3>ID</h3></div>
                        <div class="divTableCell"><h3>Nom du campus</h3></div>
                        <div class="divTableCell"><h3>Actions</h3></div>
                    </div>
                    {% for campus in campuses %}
                        <div class="divTableRow">
                            <div class="divTableCell">{{ campus.id }}</div>
                            <div class="divTableCell">{{ campus.nom }}</div>
                            <div class="divTableCell">
                                <a href="{{ path('app_campus_show', {'id': campus.id}) }}">show</a>
                                <a href="{{ path('app_campus_edit', {'id': campus.id}) }}">edit</a>
                            </div>
                        </div>
                    {% else %}
                        <div class="divTableCell">no campus found</div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <button class="glass-button uk-margin"><a href="{{ path('app_campus_new') }}" >Create new</a></button>
    </div>
{% endblock %}
