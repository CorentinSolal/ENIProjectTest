{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <h1>Register</h1>

        {{ form_start(registrationForm) }}

        {{ form_widget(registrationForm.nom) }}
        {{ form_widget(registrationForm.prenom) }}
        {{ form_widget(registrationForm.telephone) }}
        {{ form_widget(registrationForm.mail) }}
        {{ form_widget(registrationForm.plainPassword) }}
        {{ form_widget(registrationForm.campus) }}
        <div>
            <label class="uk-form-label required uk-margin" for="registration_form_agreeTerms">Agree terms </label>
            {{ form_widget(registrationForm.agreeTerms) }}
        </div>
        <button type="submit" class="glass-button uk-margin">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
