{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <h1>Register</h1>

        {{ form_start(registrationForm) }}

        {{ form_widget(registrationForm.nom) }}
        {{ form_widget(registrationForm.prenom) }}
        {{ form_widget(registrationForm.telephone) }}
        {{ form_widget(registrationForm.mail) }}
        {{ form_widget(registrationForm.plainPassword, {label: 'Password'}) }}
        {{ form_widget(registrationForm.campus) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="glass-button uk-margin">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
