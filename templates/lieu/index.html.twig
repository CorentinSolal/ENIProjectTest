{% extends 'base.html.twig' %}

{% block title %}Hello LieuController!{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="uk-text-center">Lieu index</h1>

        <div class="glass-panel uk-grid-divider" uk-grid>
            <div class="divTable">
                <div class="divTableBody">
                    <div class="divTableRow">
                        <div class="divTableCell"><h3>ID</h3></div>
                        <div class="divTableCell"><h3>Nom </h3></div>
                        <div class="divTableCell"><h3>Rue </h3></div>
                        <div class="divTableCell"><h3>Latitude </h3></div>
                        <div class="divTableCell"><h3>Longitude </h3></div>
                        <div class="divTableCell"><h3>Actions</h3></div>
                    </div>
                    {% for lieu in lieux %}
                        <div class="divTableRow">
                            <div class="divTableCell">{{ lieu.id }}</div>
                            <div class="divTableCell">{{ lieu.nom }}</div>
                            <div class="divTableCell">{{ lieu.rue }}</div>
                            <div class="divTableCell">{{ lieu.latitude }}</div>
                            <div class="divTableCell">{{ lieu.longitude }}</div>
                            <div class="divTableCell">
                                <a href="{{ path('app_lieu_show', {'id': lieu.id}) }}">show</a>
                            </div>
                        </div>
                    {% else %}
                        <div class="divTableCell">no campus found</div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <button class="glass-button uk-margin"><a href="{{ path('app_lieu_new') }}" >Create new</a></button>
        {#    {{ include('lieu/_delete_form.html.twig') }}#}
    </div>
{% endblock %}
