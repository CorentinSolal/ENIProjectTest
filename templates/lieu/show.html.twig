{% block title %}Lieu{% endblock %}

{% block body %}
    <h1>Lieu</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ lieu.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ lieu.nom }}</td>
        </tr>
        <tr>
            <th>Rue</th>
            <td>{{ lieu.rue ? lieu.rue }}</td>
        </tr>
        <tr>
            <th>Latitude</th>
            <td>{{ lieu.latitude }}</td>
        </tr>
        <tr>
            <th>Longitude</th>
            <td>{{ lieu.longitude }}</td>
        </tr>

        </tbody>
    </table>

    <a href="{{ path('app_lieu') }}">back to list</a>





    {% if is_granted('ROLE_ADMIN') %}
    {{ include('lieu/_delete_form.html.twig') }}
